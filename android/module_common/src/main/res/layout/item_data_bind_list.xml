<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.common.model.BindListData" />

        <variable
            name="bindDataInfo"
            type="BindListData" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bind_list_item_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{bindDataInfo.itemIndex}"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bind_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{bindDataInfo.title}"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bind_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{bindDataInfo.content}"
            android:textSize="20sp" />
    </LinearLayout>

</layout>